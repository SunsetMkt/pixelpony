{
   "private": true,
   "name": "pixelpony",
   "description": "Open source pony.town clone",
   "repository": "git@github.com:everycreature/pixelpony.git",
   "author": "Mathieu CAROFF <mathieu.caroff@free.fr>",
   "license": "ISC",
   "workspaces": [
      "package/*"
   ],
   "scripts": {
      "build:all": "npm-run-all build:client build:script build:server build:shared",
      "build:client": "cd package/client && webpack",
      "build:client:watch": "cd package/client && webpack --watch",
      "build:script": "cd package/script && tsc",
      "build:server": "cd package/server && tsc",
      "build:shared": "cd package/shared && tsc",
      "dev": "nodemon --inspect package/script/dist/serve.js",
      "lint": "eslint **/*.ts",
      "start": "node package/script/dist/serve.js"
   },
   "devDependencies": {
      "@typescript-eslint/eslint-plugin": "^1.13.0",
      "@typescript-eslint/parser": "^1.13.0",
      "depcheck": "^0.8.3",
      "eslint": "^6.1.0",
      "lerna": "^3.16.4",
      "nodemon": "^1.19.1",
      "npm-check": "^5.9.0",
      "npm-run-all": "^4.1.5",
      "prettier": "^1.18.2",
      "ts-node": "^8.3.0",
      "typed-install": "^1.0.6",
      "typescript": "^3.5.3",
      "typescript-json-schema": "^0.39.0"
   }
}
